{% extends "user/adminbase.html.twig" %}
{% block bars %}
    <div class="col-md-3 left_col menu_fixed">
        <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
                <a href="{{ path('app_dashboard_user') }}" class="site_title"><img src="assets/img/logo.png" alt="Université de carthage" style="width: 80%;"></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
                <div class="profile_pic">
                    {% if is_granted('ROLE_USER') %}
                    <img src="assets/img/userAvatar.png" alt="profile" class="img-circle profile_img">
                    {% endif %}
                </div>
                <div class="profile_info">
                    <span>Bienvenue,</span>
                    <h2 style="color: #1d5394;">{{ app.user.name }} {{ app.user.lastname }}</h2>
                </div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu ">
                <div class="menu_section">
                    <ul class="nav side-menu">
                        <li><a href="{{ path('app_dashboard_user') }}"><i class="fa fa-home"></i>Tableau de bord</a>
                        </li>
                        {% if is_granted("ROLE_USER") %}
                           <li><a href="{{ path('profile') }}"><i class="fa fa-user"></i>Profil</a>
                        </li>
                          <li><a href="{{ path('app_cursus') }}"><i class="fa fa-graduation-cap"></i> Mon Cursus</a>
                        </li>
                           <li><a href="{{ path('app_upload') }}"><i class="fa fa-upload"></i> Téléchrger vos documents</a>
                        </li>
                        </li>
                        <li><a href="{{ path('app_select_master') }}"><i class="fa fa-university"></i> Déposer une demande de préinscription</a></li>
                        <ul class="nav child_menu" >
                            <li><a href="{{ path('app_select_master') }}">Déposer une demande</a></li>
                            <li><a href="{{ path('app_demandes_master_index') }}">Vos demandes</a></li>
                        </ul>
                        </li>
                          <li><a href="{{ path('app_master_state') }}"><i class="fa fa-user"></i>Consuler votre dossier</a>
                        </li>
                        </li>
                         
    
                        
                        {% endif %}
                    </ul>
                </div>

            </div>
        
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu ">
                <div class="menu_section">
                    <ul class="nav side-menu">
            <li style="
    margin-top: 100%;
    padding: 14%;
    font-size: 16px;
"><a style="
    color: #1d5394;
"href="{{ path('app_logout') }}">Déconnexion <i class="fa fa-sign-out pull-right"></i></a></li>
            </ul>
            </div>
            </div>
        </div>
    </div>

    <!-- top navigation -->
    <div class="top_nav">
        <div class="nav_menu">
            <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                  <div class="position-relative">
                                
                            </div>
            </div>
          
            <nav class="nav navbar-nav">
                <ul class=" navbar-right">
                    <li class="nav-item dropdown open" style="padding-left: 15px;">
                        <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                            <img src="assets/img/userAvatar.png" alt="">{{ app.user.name }} {{ app.user.lastname }}
                        </a>
                        <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item"  href="{{ path('profile') }}"><i class="fa fa-user pull-right"></i>Profil</a>
                            <a class="dropdown-item"  href="{{ path('app_forgot_password_request') }}"><i class="fa fa-key pull-right"></i>Rénitialiser mot de passe</a>
                            <a class="dropdown-item"  href="{{ path('app_logout') }}"><i class="fa fa-sign-out pull-right"></i>Déconnexion</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- /top navigation -->

    <!-- page content -->
    <div class="right_col" role="main">
        {% for message in app.flashes("error") %}
            <div class="alert alert-danger alert-dismissible " role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                </button>
                <strong>{{ "backend.global.error"|trans }}</strong> {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes("success") %}
            <div class="alert alert-success alert-dismissible " role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                </button>
                <strong>{{ "backend.global.success"|trans }}</strong> {{ message }}
            </div>
        {% endfor %}
        {% block contenpage %}{% endblock %}
    </div>
    <!-- /page content -->
{% endblock %}
